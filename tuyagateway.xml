    <PostArgs/>
    <DateInstalled>1527397055</DateInstalled>
    <DonateText/>
    <DonateLink/>
    <DonateImg/>
    <MinVer/>
    <Description></Description>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>8189</HostPort>
                <ContainerPort>8000</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/tuyagateway</HostDir>
            <ContainerDir>/usr/src/app/etc</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
