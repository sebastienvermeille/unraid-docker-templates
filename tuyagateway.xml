<?xml version="1.0"?>
<Container version="2">
    <Name>TuyaGateway</Name>
    <Registry>https://hub.docker.com/r/tradeface</Registry>
    <Repository>tradeface/tuyagateway</Repository>
    <Github>https://github.com/TradeFace/tuyagateway</Github>
    <Network>bridge</Network>
    <MyIP/>
    <Privileged>false</Privileged>
    <Support>https://github.com/TradeFace/tuyagateway</Support>
    <Project/>
    <Overview>
        A library that communicates locally with your Tuya devices (no internet connection needed), called TuyaFace.
        TuyaGateway implements the library and communitates over MQTT.
    </Overview>
    <Category>HomeAutomation:</Category>
    <WebUI>http://[IP]:[PORT:8189]/status</WebUI>
    <TemplateURL/>
    <Icon>https://raw.githubusercontent.com/sebastienvermeille/unraid-docker-templates/main/images/tuyagateway_icon.png</Icon>
